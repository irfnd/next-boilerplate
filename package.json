		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"eslint": "^8.33.0",
		"eslint-config-next": "^13.1.6",
		"eslint-config-prettier": "^8.6.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.1",
		"prettier": "^2.8.4"
	},
	"lint-staged": {
		"**/*.js": "eslint --fix",
		"**/*.{js,json,md}": "prettier --write"
	}
}
