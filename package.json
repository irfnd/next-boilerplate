	"devDependencies": {
		"eslint": "^8.29.0",
		"eslint-config-next": "^13.0.6",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.1"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,md}": "prettier --write"
	}
