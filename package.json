{
	"name": "next-boilerplate",
	"description": "A boilerplate/starter project for quickly building web using NextJS",
	"version": "1.0.0",
	"author": "irfnd <irfandiabimanyu@gmail.com>",
	"private": false,
	"license": "MIT",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"prepare": "husky install",
		"lint": "next lint",
		"format": "prettier --write \"**/*.{js,json,md}\""
	},
	"dependencies": {
		"next": "^13.1.6",
